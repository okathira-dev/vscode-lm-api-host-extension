{
  "name": "vscode-lm-api-host",
  "displayName": "VSCode LM API host",
  "description": "VSCode Language Model API を外部アクセス可能にする",
  "version": "0.0.1",
  "publisher": "okathira-dev",
  "author": {
    "name": "okathira"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/okathira-dev/vscode-lm-api-host-extension.git"
  },
  "engines": {
    "vscode": "^1.93.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-lm-api-host.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsce:package": "vsce package",
    "vsce:package:pre-release": "vsce package --pre-release",
    "vsce:publish": "vsce publish",
    "vsce:publish:pre-release": "vsce publish --pre-release",
    "clean": "rimraf -g dist out *.vsix",
    "build": "npm run clean && npm run compile"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.1",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.3.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "npm-run-all2": "^7.0.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2"
  }
}
